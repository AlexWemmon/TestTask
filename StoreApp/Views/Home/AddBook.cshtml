@model Book
@{ Layout = "_Layout"; ViewBag.Title = "Добавление новой книги";}

<script type="text/javascript" src="https://code.jquery.com/jquery-3.0.0.min.js"></script>
<h2>Добавление новой книги</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" name="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" name="Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" name="Price" maxlength="10" type="number" placeholder="Введите число, например, 100.50 или 111525.25" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group p-1">
                <input type="submit" value="Сохранить" id="Save" class="btn btn-primary" disabled/>
                <input type="submit" value="Назад" class="btn btn-dark" asp-action="Index" asp-controller="Home" formmethod="get"/>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Price').mask('9999999.99');
        $('input.form-control').keydown(function ()
        {
            var name = $('#Name').val();
            var desc = $('#Description').val();
            var price = $('#Price').val();
            if (name == '' || desc == '' || !price)
            {
                $('#Save').prop('disabled', true);
            }
            else $('#Save').prop('disabled', false);
        })
    });
</script>
